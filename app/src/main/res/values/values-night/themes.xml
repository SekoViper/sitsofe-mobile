<resources>
    <style name="Theme.Sitsofe" parent="Theme.Material3.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:windowLightStatusBar">false</item>

        <item name="android:enableOnBackInvokedCallback">true</item>

        <!-- Splash + brand identity -->
        <item name="android:windowSplashScreenBackground">@color/sitsofe_blue</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/sitsofe_app_icon</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
    </style>
</resources>
